<Window x:Class="SW_File_Helper.Views.FavoritesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SW_File_Helper.Views"
        xmlns:vm="clr-namespace:SW_File_Helper.ViewModels.Views"
        mc:Ignorable="d"
        Title="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
        Height="450" Width="800"
        d:DataContext="{d:DesignInstance vm:FavoritesWindowViewModel, IsDesignTimeCreatable=True}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource PageHeader}" Text="Please choose your favorites"/>
        <ListView Grid.Row="1" Margin="10"
                  ItemsSource="{Binding Favorites, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  ItemContainerStyle="{StaticResource UnselectableListView}"
                  />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="Select" Style="{StaticResource Button}"
                    Command="{Binding OnSelectButtonPressed}"/>
            <Button Grid.Column="3" Content="Delete" Style="{StaticResource Button}"
                    Command="{Binding OnDeleteButtonPressed}"/>
        </Grid>
    </Grid>
</Window>
