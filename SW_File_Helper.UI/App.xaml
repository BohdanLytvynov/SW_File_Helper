<Application x:Class="SW_File_Helper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SW_File_Helper"
             xmlns:fileVM="clr-namespace:SW_File_Helper.ViewModels.Models"
             xmlns:controls="clr-namespace:SW_File_Helper.Controls"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <!--#region Colors -->
        <Color x:Key="GridSplitterColor">black
        </Color>

        <Color x:Key="BorderColor">black
        </Color>
        <!--#endregion-->

        <!--#region Brushes -->
        <SolidColorBrush x:Key="GridSplitterBrush" Color="{StaticResource GridSplitterColor}"/>

        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <!--#endregion-->

        <!--#region Durations -->
        <Duration x:Key="AnimDuration">0:0:0.2
        </Duration>
        <!--#endregion-->

        <!--#region Styles -->

        <Style x:Key="UnselectableListView" TargetType="ListViewItem">
            <Style.Setters>
                <Setter Property="Focusable" Value="False"/>
            </Style.Setters>
        </Style>

        <Style x:Key="PageHeader" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Background" Value="LightGray"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="16"/>
            </Style.Setters>
        </Style>

        <Style x:Key="GridSplitter_Vertical" TargetType="GridSplitter">
            <Style.Setters>
                <Setter Property="Width" Value="5"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Background" Value="{StaticResource GridSplitterBrush}"/>
            </Style.Setters>
        </Style>

        <Style x:Key="GridSplitter_Horizontal" TargetType="{x:Type GridSplitter}">
            <Style.Setters>
                <Setter Property="Height" Value="5"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Background" Value="{StaticResource GridSplitterBrush}"/>
            </Style.Setters>
        </Style>

        <Style x:Key="FilePathBorder" TargetType="Border">
            <Style.Setters>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="CornerRadius" Value="5"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Padding" Value="5"/>
            </Style.Setters>
        </Style>

        <Style x:Key="TxtBoxInputStyle" TargetType="TextBox">
            <Style.Setters>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Validation.ErrorTemplate">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border BorderBrush="OrangeRed" BorderThickness="2">
                                <Grid>
                                    <AdornedElementPlaceholder/>
                                    <TextBlock Text="{Binding [0].ErrorContent}" Foreground="OrangeRed"
                                       VerticalAlignment="Bottom" HorizontalAlignment="Left"                                       
                                       />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="False">
                    <Setter Property="BorderBrush" Value="#FF23A829"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Padding" Value="0,0,0,10"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextBlockInputStyle" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
            </Style.Setters>
        </Style>

        <Style x:Key="InputFieldContainer" TargetType="StackPanel">
            <Style.Setters>
                <Setter Property="Margin" Value="0,3,0,0"/>
            </Style.Setters>
        </Style>

        <Style x:Key="Button" TargetType="Button">
            <Style.Setters>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="0,5,0,5"/>
            </Style.Setters>
        </Style>

        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Background" Value="LightGray"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="16"/>
            </Style.Setters>
        </Style>

        <Style x:Key="favoritesLVHeaders" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="TextDecorations" Value="Underline"/>
            </Style.Setters>
        </Style>

        <!--#endregion-->

        <!--#region DataTemplates -->

        <DataTemplate DataType="{x:Type fileVM:FileViewModel}">
            <Border Style="{StaticResource FilePathBorder}" x:Name="brd" Background="White">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Number, UpdateSourceTrigger=PropertyChanged, 
                        StringFormat=№{0})}" Margin="0,0,5,0"/>
                    <TextBox Width="400" 
                             Style="{StaticResource TxtBoxInputStyle}"
                             MaxWidth="400"
                             TextWrapping="Wrap"
                             AcceptsReturn="True" AcceptsTab="True"
                             MaxLength="400"
                             Margin="0,0,5,0"
                             >
                        <TextBox.Text>
                            <Binding Path="FilePath"
                                UpdateSourceTrigger="PropertyChanged" 
                                Mode="TwoWay"
                                     >
                                <Binding.ValidationRules>
                                    <DataErrorValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <Button Content="..." Width="20" Margin="0,0,5,0" Command="{Binding OnBrowseFileButtonPressed}"/>
                    <CheckBox Content="Enabled" VerticalContentAlignment="Center"
                                  IsChecked="{Binding IsEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                  />
                </StackPanel>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsEnabled, 
                    UpdateSourceTrigger=PropertyChanged}" Value="False">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation
                                    From="White"
                                    To="LightGray"
                                    Duration="{StaticResource AnimDuration}"
                                    Storyboard.TargetName="brd"
                                    Storyboard.TargetProperty="Background.Color"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation
                                    From="LightGray"
                                    To="White"
                                    Duration="{StaticResource AnimDuration}"
                                    Storyboard.TargetName="brd"
                                    Storyboard.TargetProperty="Background.Color"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <DataTemplate DataType="{x:Type fileVM:ListViewFileViewModel}">
            <Border Style="{StaticResource FilePathBorder}" x:Name="brd" Background="White">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Number, UpdateSourceTrigger=PropertyChanged, 
                Mode=OneWay, StringFormat=№{0})}" Margin="0,0,5,0"/>
                        <TextBox Width="400" 
                     Style="{StaticResource TxtBoxInputStyle}"
                     MaxWidth="400"
                     TextWrapping="Wrap"
                     AcceptsReturn="True" AcceptsTab="True"
                     MaxLength="400"
                     Margin="0,0,5,0"
                     >
                            <TextBox.Text>
                                <Binding Path="FilePath"
                        UpdateSourceTrigger="PropertyChanged" 
                        Mode="TwoWay"
                             >
                                    <Binding.ValidationRules>
                                        <DataErrorValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Button Content="..." Width="20" Margin="0,0,5,0" Command="{Binding OnBrowseFileButtonPressed}"/>
                        <CheckBox Content="Enabled" VerticalContentAlignment="Center"
                          IsChecked="{Binding IsEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                          />
                    </StackPanel>
                    <controls:EditableListView Height="230"
                        Title="Specify Destinations Here:"
                        ListViewItemAssemblyPath="{Binding CurrentAssembly,
                        UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        ListViewItemTypeName="{Binding FileViewModelTypeName,
                        UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        Items="{Binding DestFiles, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        AddToFavoritesFired="{Binding AddToFavoritesFired, UpdateSourceTrigger=PropertyChanged,
                        Mode=TwoWay}"
                        ShowFavoritesFired="{Binding ShowFavoritesFired, UpdateSourceTrigger=PropertyChanged,
                        Mode=TwoWay}"
                        ManualDraw="{Binding ManualDraw, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        />
                </StackPanel>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsEnabled, 
        UpdateSourceTrigger=PropertyChanged}" Value="False">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation
                        From="White"
                        To="LightGray"
                        Duration="{StaticResource AnimDuration}"
                        Storyboard.TargetName="brd"
                        Storyboard.TargetProperty="Background.Color"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation
                        From="LightGray"
                        To="White"
                        Duration="{StaticResource AnimDuration}"
                        Storyboard.TargetName="brd"
                        Storyboard.TargetProperty="Background.Color"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <DataTemplate DataType="{x:Type fileVM:FavoriteFileViewModel}">
            <Border Style="{StaticResource FilePathBorder}" x:Name="brd" 
                    Background="Transparent">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Number, UpdateSourceTrigger=PropertyChanged, 
                        StringFormat=№{0})}" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Path, UpdateSourceTrigger=PropertyChanged,
                        StringFormat=Destination: {0}}"
                        Margin="0,0,5,0"/>
                    <ToggleButton Content="Select" Margin="15,0" 
                                  IsChecked="{Binding IsSelected, 
                        UpdateSourceTrigger=PropertyChanged,
                        Mode=TwoWay}"/>
                </StackPanel>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation
                        Storyboard.TargetName="brd"
                        Storyboard.TargetProperty="Background.Color"
                        From="Transparent"
                        To="#64c3fe5c"
                        Duration="{StaticResource AnimDuration}"
                        />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation
                        Storyboard.TargetName="brd"
                        Storyboard.TargetProperty="Background.Color"
                        From="#64c3fe5c"
                        To="Transparent"
                        Duration="{StaticResource AnimDuration}"
                        />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <DataTemplate DataType="{x:Type fileVM:FavoriteListViewFileViewModel}">
            <Border Style="{StaticResource FilePathBorder}" x:Name="brd" Background="Transparent">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Number, UpdateSourceTrigger=PropertyChanged, 
                                    Mode=OneWay, StringFormat=№{0})}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Path, UpdateSourceTrigger=PropertyChanged,
                                StringFormat=Source: {0}}"
                                   Margin="0,0,5,0"/>
                        </StackPanel>
                        <TextBlock Text="Destination pathes:" Margin="0,5" 
                                   Style="{StaticResource favoritesLVHeaders}"/>
                        <ListView Height="150" ItemsSource="{Binding DestPathes, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <ToggleButton Margin="40, 60" Width="100" Height="40" IsChecked="{Binding IsSelected, 
                    UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
          Content="Select"
          />
                </StackPanel>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation
                                    Storyboard.TargetName="brd"
                                    Storyboard.TargetProperty="Background.Color"
                                    From="Transparent"
                                    To="#64c3fe5c"
                                    Duration="{StaticResource AnimDuration}"
                                    />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation
                                    Storyboard.TargetName="brd"
                                    Storyboard.TargetProperty="Background.Color"
                                    From="#64c3fe5c"
                                    To="Transparent"
                                    Duration="{StaticResource AnimDuration}"
                                    />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!--#endregion-->
    </Application.Resources>
</Application>
