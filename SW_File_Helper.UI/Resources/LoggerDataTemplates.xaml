<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:SW_File_Helper.ViewModels.Models.Logs.Base"
                    >
    <DataTemplate DataType="{x:Type vm:LogViewModel}">
        <TextBlock Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                   Style="{Binding Style, UpdateSourceTrigger=PropertyChanged}"
                   />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ConsoleMessageViewModel}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding ClientIp, UpdateSourceTrigger=PropertyChanged}"
                       Style="{Binding Style, UpdateSourceTrigger=PropertyChanged}"
                />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>