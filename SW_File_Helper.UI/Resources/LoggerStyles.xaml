<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Info">
        <Style.Setters>
            <Setter Property="ItemsControl.Foreground" Value="LightGreen"/>
            <Setter Property="ItemsControl.FontSize" Value="14"/>
        </Style.Setters>
    </Style>

    <Style x:Key="Warning">
        <Style.Setters>
            <Setter Property="ItemsControl.Foreground" Value="Orange"/>
            <Setter Property="ItemsControl.FontSize" Value="14"/>
        </Style.Setters>
    </Style>

    <Style x:Key="Error">
        <Style.Setters>
            <Setter Property="ItemsControl.Foreground" Value="Red"/>
            <Setter Property="ItemsControl.FontSize" Value="14"/>
        </Style.Setters>
    </Style>

    <Style x:Key="Debug">
        <Style.Setters>
            <Setter Property="ItemsControl.Foreground" Value="LightBlue"/>
            <Setter Property="ItemsControl.FontSize" Value="14"/>
        </Style.Setters>
    </Style>
</ResourceDictionary>